<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <p><a href="/">Nyitóoldal</a></p>
    <label for="nevvalogat">Név Válogatás:</label>
    <input type="text" name="nevvalogat" id="nevvalogat">
    <label for="arvalogat">ÁR Válogatás:</label>
    <input type="number" name="arvalogat" id="arvalogat">
    <button onclick="levalogat()">Lekér</button>
    <div id="talalat"></div>
    <script>
        function levalogat() {
            let nevvalogat = document.getElementById('nevvalogat').value;
            let arvalogat = document.getElementById('arvalogat').value;
            fetch('http://localhost:3001/kombi', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ nevvalogat, arvalogat })
            }).then(response => {
                return response.json();
            })
                .then(data => {
                    const konyvek = data.valogatott;
                    const talalat = document.getElementById('talalat');
                    talalat.innerHTML = '';
                    for (let i = 0; i < konyvek.length; i++) {
                        const szerzo = document.createElement('h1');
                        szerzo.innerText = konyvek[i].szerzo;
                        talalat.appendChild(szerzo);
                        const cim = document.createElement('p');
                        cim.innerText = konyvek[i].cim;
                        talalat.appendChild(cim);
                        const ar = document.createElement('p');
                        ar.innerText = konyvek[i].ar + " Ft";
                        talalat.appendChild(ar);
                    }
                })
                .catch(error => console.log(error));
        }
    </script>
</body>

</html>